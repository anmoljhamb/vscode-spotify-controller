{
    "name": "spotify-controller",
    "displayName": "SpotifyController",
    "description": "To be edited later",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "spotify-controller.login",
                "category": "SpotifyController",
                "title": "Login"
            },
            {
                "command": "spotify-controller.logout",
                "category": "SpotifyController",
                "title": "Logout"
            },
            {
                "command": "spotify-controller.playPause",
                "category": "SpotifyController",
                "title": "Play Pause"
            },
            {
                "command": "spotify-controller.pause",
                "category": "SpotifyController",
                "title": "Pause"
            },
            {
                "command": "spotify-controller.play",
                "category": "SpotifyController",
                "title": "Play"
            },
            {
                "command": "spotify-controller.shuffleOff",
                "category": "SpotifyController",
                "title": "Shuffle Off"
            },
            {
                "command": "spotify-controller.shuffleOn",
                "category": "SpotifyController",
                "title": "Shuffle On"
            },
            {
                "command": "spotify-controller.nextSong",
                "category": "SpotifyController",
                "title": "Next Song"
            },
            {
                "command": "spotify-controller.prevSong",
                "category": "SpotifyController",
                "title": "Previous Song"
            }
        ],
        "configuration": [
            {
                "title": "Spotify Controller",
                "properties": {
                    "spotifyControllerApiPort": {
                        "description": "Run the API server on the given port",
                        "type": "number",
                        "default": 61234
                    },
                    "spotifyControllerClientId": {
                        "description": "Enter your own client id from the developer spotify console",
                        "type": "string",
                        "default": "clientId"
                    },
                    "spotifyControllerClientSecret": {
                        "description": "Enter your own client secret from the developer spotify console",
                        "type": "string",
                        "default": "clientSecret"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "http-errors": "^2.0.0",
        "morgan": "^1.10.0",
        "spotify-web-api-node": "^5.0.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.78.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "@vscode/test-electron": "^2.3.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/morgan": "^1.9.4",
        "@types/spotify-web-api-node": "^5.0.7",
        "dotenv": "^16.1.3",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4",
        "@types/http-errors": "^2.0.1"
    }
}
